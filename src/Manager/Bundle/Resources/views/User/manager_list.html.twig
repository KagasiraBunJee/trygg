{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {% if users|length > 0 %}
                <table class="table table-striped">
                    <tr>
                        <td>ID</td>
                        <td>First name</td>
                        <td>Last name</td>
                        <td>Email</td>
                        <td>Role</td>
                        <td></td>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.name }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.role == "ROLE_SUPER_ADMIN" %}
                                    Admin
                                {% else %}
                                    Manager
                                {% endif %}
                            </td>
                            <td class="text-center" style="position: relative;">
                                <div class="btn-group" aria-label="..." role="group">
                                    <a title="Edit" href="{{ path('edit_user', {'id':user.id}) }}" type="button" class="btn btn-default btn-sm" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                    </a>
                                    <a title="Delete company" href="{{ path("delete_user",{"id":user.id}) }}" type="button" class="btn btn-default btn-sm" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>

            {% else %}
                <h2 style="margin: 0;"><small>No managers found</small></h2>
            {% endif %}
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
{% endblock %}