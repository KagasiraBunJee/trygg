{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-md-6">
            {% if result == true %}
                <div class="alert alert-success" role="alert">You have successfully saved this manager.</div>
            {% elseif form.email.vars.errors|length > 0 %}
                <div class="alert alert-danger" role="alert">Form is invalid!</div>
            {% endif %}
            {{ form_start(form) }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Manager credentials</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        {{ form_widget(form.email, { "attr" : { "class" : "form-control" }, "id" : "email" }) }}
                    </div>
                    <div class="form-group">
                        <label for="name">Name</label>
                        {{ form_widget(form.name, { "attr" : { "class" : "form-control" }, "id" : "name" }) }}
                    </div>
                    <div class="form-group">
                        <label for="last_name">Last Name</label>
                        {{ form_widget(form.last_name, { "attr" : { "class" : "form-control" }, "id" : "last_name" }) }}
                    </div>
                    <div class="form-group">
                        <label for="role">User type</label>
                        {{ form_widget(form.role, { "attr" : { "class" : "form-control" }, "id" : "role" }) }}
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        {{ form_widget(form.password, { "attr" : { "class" : "form-control" }, "id" : "password", "value" : "" }) }}
                    </div>
                    <div aria-label="..." role="group" class="btn-group entry-btn-group">
                        <a href="#" onclick="history.go(-1);" class="btn btn-default"><i class="glyphicon glyphicon-arrow-left"></i> Back to list</a>
                        <button id="submit" class="btn btn-default" name="company[submit]" type="submit"><i class='glyphicon glyphicon-floppy-disk'></i> Save</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}