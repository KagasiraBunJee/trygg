{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Settings</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="email">Admin email</label>
                        {{ form_widget(form.email, { "attr":{ "class":"form-control" }, "id":"email" }) }}
                    </div>
                    <div class="form-group">
                        <label for="within">Send within days of inactivity</label>
                        {{ form_widget(form.days, { "attr":{ "class":"form-control" }, "id":"within" }) }}
                    </div>
                    <div class="form-group">
                        <label for="after">After numbers of complaints</label>
                        {{ form_widget(form.numbers, { "attr":{ "class":"form-control" }, "id":"after" }) }}
                    </div>
                    <div class="checkbox">
                        <label>
                            {{ form_widget(form.activate) }} Enable sending email?
                        </label>
                    </div>
                    <div aria-label="..." role="group" class="btn-group entry-btn-group">
                        <button id="submit" class="btn btn-default" name="company[submit]" type="submit"><i class='glyphicon glyphicon-floppy-disk'></i> Save</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}