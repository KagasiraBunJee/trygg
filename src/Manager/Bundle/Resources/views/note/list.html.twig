{% extends 'base.html.twig' %}

{% block body %}

    <div style="margin-top: 15px;" class="table-responsive table-scrollable">
        <table class="table">
            <thead>
                <tr>
                    <td>
                        ID
                    </td>
                    <td>
                        Text
                    </td>
                    <td>
                        Manager
                    </td>
                    <td>
                        Created
                    </td>
                </tr>
            </thead>
            <tbody>
            {% for note in notes %}

                <tr>
                    <td>{{ note.id }}</td>
                    <td>{{ note.text }}</td>
                    <td>{{ note.creator.name~' '~note.creator.lastName }}</td>
                    <td>{{ note.created|date('d-F-Y H:i:s') }}</td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            {{ knp_pagination_render(notes) }}
        </div>
    </div>

{% endblock %}