<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets 'bundles/manager/css/*' filter='cssrewrite' %}
        {% endstylesheets %}
        <link href="{{ asset('bundles/manager/css/bootstrap.min.css') }}" rel="stylesheet">
        {#<link href="{{ asset('bundles/manager/css/bootstrap-theme.min.css') }}" rel="stylesheet">#}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        {% javascripts 'bundles/manager/js/*' %}
        {% endjavascripts %}
        <script src="{{ asset('bundles/manager/js/scripts.js') }}"></script>
        <script src="{{ asset('bundles/manager/js/bootstrap.min.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style>
            {# .nav-collapse{
                margin-left: 36% !important;
                margin-right: 30% !important;
            }#}
            .navbar-brand
            {
                position: absolute;
                width: 100%;
                left: 0;
                text-align: center;
                margin: auto;
            }
            .navbar-brand .form-group{
                margin-top:8px;
            }
            .custom-menu{
                padding-right: 0;
                padding-left: 0;
                /*background: #cfd6db !important;*/
            }
            .custom-menu .list-group a{
                margin-top:5px;
                margin-bottom: 5px;
            }
            .selected-row{
                background-color: #f5f5f5;
            }
            .smartSearchResult{
                left: inherit;
                top: 78%;
            }
            .showSmartSearch{
                display: block;
            }
        </style>
    </head>
    <body style="overflow-x: hidden;">
        {% block usermenu %}
            {% if app.user %}
                <nav style="margin-bottom:0;" class="navbar navbar-default">
                    <div style="padding-left: 0;" class="container-fluid">

                        <form class="navbar-form navbar-brand" role="search" method="get">
                            <div class="form-group">
                                <input style="width: 300px;" type="text" {% if step is defined %} step="{{ step.id }}" {% if step.name == "Rejected" %} rejected="true" {% endif %} {% endif %} id="searchAjax" class="form-control" placeholder="Search" name="search">
                                <ul class="dropdown-menu smartSearchResult" role="menu">
                                </ul>
                            </div>
                        </form>
                        <div style="z-index: 3" class="navbar-header">

                        </div>
                        <div style="padding-left: 0;" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="hover-btn"><a style="padding:0;" href="{{ path('home') }}"><img height="50px" src="{{ asset('bundles/manager/images/logo.png') }}"></a></li>
                                {#     <li class="hover-btn"><a href="{{ path('add_sale') }}" class="">Add new</a></li> #}
                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li class="pull-right hover-btn"><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Sign out</a></li>
                                <li class="pull-right hover-btn"><a href="#">Hi,<strong>{{ app.user.name }}</strong></a></li>
                            </ul>
                        </div>
                    </div>
                </nav>

            {% endif %}
        {% endblock %}
        <div style="width: 1200px;margin-left: auto;margin-right: auto;" class="row">
            {% if app.user %}
                <h1>
                    {% if step is defined %}
                        {{ step.name }} list
                    {% elseif bar_title is defined %}
                        {{ bar_title|raw() }}
                    {% endif %}
                    {% if hide_add_btn is not defined %}<a style="" href="{{ path('add_sale') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Create new company</a>{% endif %}
                </h1>
            {% endif %}
        {% block sidemenu %}
            {% if app.user and is_granted('ROLE_SUPER_ADMIN') %}
            <div class="col-md-2 custom-menu">
                <div class="list-group">
                    <a style="background: #00b05d;color:white;" class="list-group-item text-center text-uppercase list-group-item-success" href="{{ path('main', { 'step':1 }) }}"> New Sales </a>
                    <a style="background: #ff3d00;color:white;" class="list-group-item text-center text-uppercase list-group-item-danger" href="{{ path('rejected') }}"> Not Accepted </a>
                    {% for cat in steps() %}
                        {% if cat.id > 1 and cat.id < 8%}
                            <a class="list-group-item text-center text-uppercase button-menu-margin" href="{{ path('main', { 'step':cat.id }) }}"> {{ cat.name }} </a>
                        {% endif %}
                    {% endfor %}
                    <a style="background: #1c3557;color:white;" class="list-group-item list-group-item-info text-center text-uppercase button-menu-margin" href="{{ path('main', { 'step':8 }) }}">Not Paid</a></li>
                    <a style="background: #1c3557;color:white;" class="list-group-item list-group-item-info text-center text-uppercase button-menu-margin" href="{{ path('main', { 'step':9 }) }}">Complaints</a>
                    <a style="background: #1c3557;color:white;" class="list-group-item list-group-item-info text-center text-uppercase button-menu-margin" href="{{ path('main', { 'step':10 }) }}">Other</a>
                    <a class="list-group-item text-center text-uppercase button-menu-margin" href="{{ path('all_customers') }}">All companies</a>
                    <a class="list-group-item text-center text-uppercase button-menu-margin" href="{{ path('personal') }}">Managers</a>
                    <a class="list-group-item text-center text-uppercase button-menu-margin" href="{{ path('reg_manager') }}">Add new manager</a>
                    <a class="list-group-item text-center text-uppercase button-menu-margin" href="#">Reports[Not working currently]</a>
                    <a class="list-group-item text-center text-uppercase button-menu-margin" href="{{ path("settings_page") }}">Settings</a>
                </div>
            </div>
            {% endif %}
        {% endblock %}
            <div style="padding-right:0;" class="{% if app.user and is_granted('ROLE_SUPER_ADMIN') %}col-md-10{% else %}col-md-12{% endif %}">

                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
