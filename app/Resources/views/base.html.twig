<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets 'bundles/manager/css/*' filter='cssrewrite' %}
        {% endstylesheets %}
        <link href="{{ asset('bundles/manager/css/bootstrap.min.css') }}" rel="stylesheet">

        <link href="{{ asset('bundles/manager/css/bootstrap-datepicker3.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/manager/css/bootstrap-datepicker3.standalone.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/manager/css/style.css') }}" rel="stylesheet">
        {#<link href="{{ asset('bundles/manager/css/bootstrap-theme.min.css') }}" rel="stylesheet">#}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        {% javascripts 'bundles/manager/js/*' %}
        {% endjavascripts %}
        <script src="{{ asset('bundles/manager/js/scripts.js') }}"></script>
        <script src="{{ asset('bundles/manager/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/manager/js/bootstrap-datepicker.min.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body style="overflow-x: hidden;">
        {% block usermenu %}
            {% if app.user %}
                <nav style="margin-bottom:0;" class="navbar navbar-default">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div style="padding:0;" class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul style="width: 100%;" class="nav navbar-nav">
                            <li style="margin-right: 25%;"><a style="padding:0;" href="{{ path('home') }}"><img height="50px" src="{{ asset('bundles/manager/images/logo.jpg') }}"></a></li>
                            <li style="">
                                <form class="navbar-form" role="search" method="get">
                                    <div class="form-group">
                                        <input style="width: 300px;" type="text" {% if step is defined %} step="{{ step.id }}" {% if step.name == "Rejected" %} rejected="true" {% endif %} {% endif %} id="searchAjax" class="form-control" placeholder="Search" name="search">
                                        <ul class="dropdown-menu smartSearchResult" role="menu">
                                        </ul>
                                    </div>
                                </form>
                            </li>
                            <li class="pull-right"><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> Sign out</a></li>
                            <li class="pull-right"><a href="#">Hi,<strong>{{ app.user.name }}</strong></a></li>
                        </ul>
                    </div>
                </nav>

            {% endif %}
        {% endblock %}
        <div style="margin-left: auto;margin-right: auto;" class="row">
            {% if app.user %}
                <h2><small>
                    {% if step is defined %}
                        {{ step.name }} list
                    {% elseif bar_title is defined %}
                        {{ bar_title|raw() }}
                    {% endif %}</small>
                    {% if hide_add_btn is not defined %}
                        <a style="" href="{{ path('add_sale') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Create new company</a>
                    {% endif %}
                    {% if show_manager_button is defined %}
                        <a style="" href="{{ path('reg_manager') }}" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Create new user</a>
                    {% endif %}
                </h2>
            {% endif %}
        {% block sidemenu %}
            {% if app.user and is_granted('ROLE_SUPER_ADMIN') %}
            <div class="col-md-2 custom-menu">
                <ul class="list-group">
                    <li class="list-group-item saveCell"><a style="" class="btn btn-link" href="{{ path('main', { 'step':1 }) }}"> New Sales </a></li>
                    <li class="list-group-item rejectCell"><a style="" class="btn btn-link" href="{{ path('rejected') }}"> Not Accepted </a></li>
                </ul>
                <ul class="list-group">
                    {% for cat in steps() %}
                        {% if cat.id > 1 and cat.id < 8%}
                            <li class="list-group-item"><a class="btn btn-link" href="{{ path('main', { 'step':cat.id }) }}"> {{ cat.name }} </a></li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <ul class="list-group">
                    <li class="list-group-item infoCell"><a style="" class="btn btn-link" href="{{ path('main', { 'step':8 }) }}">Not Paid</a></li>
                    <li class="list-group-item infoCell"><a style="" class="btn btn-link" href="{{ path('main', { 'step':9 }) }}">Complaints</a></li>
                    <li class="list-group-item infoCell"><a style="" class="btn btn-link" href="{{ path('main', { 'step':10 }) }}">Other</a></li>
                </ul>
                <ul class="list-group">
                    <li class="list-group-item"><a class="btn btn-link" href="{{ path('all_customers') }}">All companies</a></li>
                </ul>
                <ul class="list-group">
                    <li class="list-group-item"><a class="btn btn-link" href="{{ path('personal') }}">Sales Managers</a></li>
                    <li class="list-group-item"><a class="btn btn-link" href="{{ path('reg_manager') }}">Add new manager</a></li>
                    <li class="list-group-item"><a class="btn btn-link" href="{{ path("reports") }}">Reports</a></li>
                    <li class="list-group-item"><a class="btn btn-link" href="{{ path("settings_page") }}">Settings</a></li>
                </ul>
            </div>
            {% endif %}
        {% endblock %}
            <div style="padding-right:0;" class="{% if app.user and is_granted('ROLE_SUPER_ADMIN') %}col-md-10{% else %}col-md-12{% endif %}">

                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
